{% extends './layout.twig' %}

{% block title %}
    {{ query }} | Search Wallpapers
{% endblock %}

{% block content %}
        <!-- Wallpaper Preview Container -->
    <div class="w-full min-h-screen border-t border-border p-2 sm:p-4 md:p-8 ">
        <div class="w-full h-full relative">
            <div class="w-full h-full p-2 md:p-4">
                <div class="wallpaper-container">
                    <div class="flex flex-col gap-4 items-start">
                        <h1 class="text-lg md:text-2xl lg:text-4xl text-muted-foreground capitalize">
                            #{{ query }}
                        </h1>
                        <div class="w-full p-2 relative box-border mt-0 mb-0">
                            {% if wallpapers is null %}
                                <div class="flex items-center justify-center w-full">
                                    <span class="text-center text-4xl uppercase">
                                        No Wallpaper Found
                                    </span>
                                </div>
                            {% else %}
                                <!-- <div class="columns-2 sm:columns-3 md:columns-2 xl:columns-4 2xl:columns-5 gap-2 md:gap-4"> -->
                                <div id="wallpaperContainer" class="relative w-full">
                                    {% include './ui/WallpaperCard.twig' with wallpapers %}
                                </div>
                            {% endif %}
                            <div class="absolute -bottom-20 h-20 left-0 w-full p-2 md:p-4 lg:p-8" style="height: 160px;">
                                <div id="gallery-end-checkers" class="min-h-20 w-full flex flex-col items-center justify-center">
                                    <div class="loader gallery-loader invisible" role="status">
                                        <div class="spinner"></div>
                                    </div>
                                    <div class="no-wallpaper text-center invisible">
                                        <strong>No More Wallpapers</strong>
                                        <br>
                                        <strong class="inline-flex flex-wrap gap-4">
                                            <span>Try these </span>
                                            <a href="/search?q=krishna">Krishna</a>
                                            <a href="/search?q=anime">Anime</a>
                                            <a href="/search?q=girl">Girl</a>
                                            <a href="/search?q=car">Car</a>
                                            <a href="/search?q=danger">Danger</a>
                                            <a href="/search?q=boy">Boy</a>
                                        </strong>
                                    </div>
                                </div>
                            </div>

                            <div class="w-full min-h-[calc(100vh/2)] flex items-center justify-center border border-border">
                                {# Ads by Google #}
                                <!-- Wallpaper Preview Page -->
                               <ins class="adsbygoogle"
     style="display:block"
     data-ad-format="autorelaxed"
     data-ad-client="ca-pub-2522440384764425"
     data-ad-slot="7271387915"></ins>
<script>
     (adsbygoogle = window.adsbygoogle || []).push({});
</script>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/public/assets/js/compressed/search.js"></script>

    <script type="text/javascript">
        option.query = "{{ query }}";
        option.api += `${BaseURI}/{{ endpoint }}`;
        {% if nextPage is defined %}
            option.nextPage = {{ nextPage }};
        {% endif %}
        {% if maxWidth is defined %}
            option.maxWidth = {{ maxWidth }};
        {% endif %}
    </script>
{% endblock %}