{% extends './layout.twig' %}

{% block title %}
    Login to DCEYEWR
{% endblock %}

{% block content %}
<section class="bg-background">
  <div class="min-h-[80vh] flex flex-col items-center justify-center px-6 py-8 mx-auto my-8 lg:py-0">
      <a href="/" class="flex items-center mb-6 text-2xl font-semibold text-foreground">
          <img class="w-8 h-8 mr-2" src="{{logoWithoutText}}" alt="logo">
          Gloztik    
      </a>
      <div class="w-full rounded-lg shadow-lg md:mt-0 sm:max-w-md xl:p-0 bg-card border border-border">
          <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
              <h1 class="text-xl font-bold leading-tight tracking-tight md:text-2xl">
                  Register
              </h1>
              <form class="space-y-4 md:space-y-6" >
                  <div>
                      <label for="email" class="block mb-2 text-sm font-medium">Your E-mail</label>
                      <input type="email" name="email" id="user_email" class="bg-background/50 border border-border rounded-lg focus:ring-dc_secondary_2_clr focus:border-dc_secondary_2_clr block w-full p-2.5 focus:shadow-md" placeholder="john@gmail.com" required>
                  </div>
                  <div>
                      <label for="name" class="block mb-2 text-sm font-medium">Your Name</label>
                      <input type="text" name="name" id="fullname" class="bg-background/50 border border-border rounded-lg focus:ring-dc_secondary_2_clr focus:border-dc_secondary_2_clr block w-full p-2.5 focus:shadow-md" placeholder="john doe" required>
                  </div>
                  <div>
                      <label for="username" class="block mb-2 text-sm font-medium">Choose a Username</label>
                      <input type="text" name="username" id="username" class="bg-background/50 border border-border rounded-lg focus:ring-dc_secondary_2_clr focus:border-dc_secondary_2_clr block w-full p-2.5 focus:shadow-md" placeholder="johnsgallery" required>
                  </div>
                  <div>
                      <label for="password" class="block mb-2 text-sm font-medium ">Password</label>
                      <input type="password" name="password" id="user_password" placeholder="••••••••" class="bg-background/50 border border-border rounded-lg focus:ring-dc_secondary_2_clr focus:border-dc_secondary_2_clr block w-full p-2.5 focus:shadow-md" required>
                  </div>
                  <div>
                      <label for="confirm_password" class="block mb-2 text-sm font-medium ">Confirm Password</label>
                      <input type="password" name="confirm_password" id="confirm_password" placeholder="••••••••" class="bg-background/50 border border-border rounded-lg focus:ring-dc_secondary_2_clr focus:border-dc_secondary_2_clr block w-full p-2.5 focus:shadow-md" required>
                  </div>
                  <div class="flex items-center justify-between">
                      <a href="/reset-password" class="text-sm font-medium text-dc_body_text_light_clr hover:underline">Forgot password?</a>
                  </div>
                  <button type="button" aria-label="Sign In" id="sign_in_button" class="w-full text-primary-foreground bg-primary hover:bg-primary/75 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">Sign in</button>
                  <p class="text-sm font-light text-dc_body_text_light_clr">
                      Have an account? <a href="/dashboard/login" class="font-medium text-primary hover:underline">Sign in</a>
                  </p>
              </form>
          </div>
      </div>
  </div>
</section>
<script src="/public/assets/scripts/sign_up.js"></script>
{% endblock %}